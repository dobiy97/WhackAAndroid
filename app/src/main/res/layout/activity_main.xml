<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp" tools:layout_editor_absoluteY="0dp"
            android:id="@+id/txtScore" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <ImageButton
            android:layout_width="97dp"
            android:layout_height="97dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            tools:layout_editor_absoluteY="339dp" android:id="@+id/imgMole"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Start"
            android:layout_width="395dp"
            android:layout_height="59dp" tools:layout_editor_absoluteY="666dp"
            android:id="@+id/btnControl" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>